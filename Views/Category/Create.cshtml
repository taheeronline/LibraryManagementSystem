@model Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <!-- Adjusted width -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Create Category</h2>
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control" id="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary rounded">Save</button>
                            <a href="/Category" class="btn btn-secondary rounded">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
