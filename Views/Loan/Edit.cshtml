@model Loan

@{
    ViewData["Title"] = "Edit Loan";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Edit Loan</h2>
                    <form asp-action="Edit" method="Post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label for="BookId" class="form-label">Book</label>
                            <select asp-for="BookId" class="form-control" asp-items="ViewBag.Books" id="BookId" style="height: 40px;">
                                <option value="">Select a Book</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="MemberId" class="form-label">Member</label>
                            <select asp-for="MemberId" class="form-control" asp-items="ViewBag.Members" id="MemberId" style="height: 40px;">
                                <option value="">Select a Member</option>
                            </select>
                            <span asp-validation-for="MemberId" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="LoanDate" class="form-label">Issued Date</label>
                                <input asp-for="LoanDate" type="date" class="form-control" id="LoanDate" style="height: 40px;" />
                                <span asp-validation-for="LoanDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="ReturnDate" class="form-label">Due Date</label>
                                <input asp-for="ReturnDate" type="date" class="form-control" id="ReturnDate" style="height: 40px;" />
                                <span asp-validation-for="ReturnDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary rounded">Save</button>&nbsp;&nbsp;
                            <a href="/Loan" class="btn btn-secondary rounded">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>