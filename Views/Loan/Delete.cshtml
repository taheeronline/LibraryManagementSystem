@model Loan

@{
    ViewData["Title"] = "Delete Loan";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Loan</h2>
    <div class="card">
        <div class="card-body">
            <p class="confirmation-message text-center">
                Are you sure you want to delete this loan for <strong>@Model.Book.Title</strong> issued to
                <strong>@Model.Member.Name</strong>?
            </p>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    &nbsp;&nbsp;
                    <a href="/Loan" class="btn btn-secondary rounded">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
