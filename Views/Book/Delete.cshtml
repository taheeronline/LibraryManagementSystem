@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Book</h2>
    <div class="card">
        <div class="card-body">
            <p class="confirmation-message text-center">
                <h4>Are you sure you want to delete this book?</h4>
                <dl class="row">
                    <dt class="col-sm-2">Title</dt>
                    <dd class="col-sm-10">@Model.Title</dd>

                    <dt class="col-sm-2">Author</dt>
                    <dd class="col-sm-10">@Model.Author</dd>

                    <dt class="col-sm-2">ISBN</dt>
                    <dd class="col-sm-10">@Model.ISBN</dd>
                </dl>
            </p>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    &nbsp;&nbsp;
                    <a href="/Book" class="btn btn-secondary rounded">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
