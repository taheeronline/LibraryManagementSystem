@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="text-center mb-4">Books</h2>
            <a asp-action="Create" class="btn btn-primary rounded mb-3">Add New Book</a>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>Category</th>
                            <th>Availability</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.ISBN</td>
                                <td>@book.Category?.Name</td>
                                <td>@(book.IsAvailable ? "Available" : "Checked Out")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm rounded">Edit</a>
                                    &nbsp;&nbsp;<a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm rounded">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
